// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ui_font_family": ".SystemUIFont",
  "buffer_font_weight": 350.0,
  "terminal": {
    "font_weight": 350.0,
    "font_family": "JetBrainsMono Nerd Font",
  },
  "buffer_line_height": "comfortable",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "agent": {
    "always_allow_tool_actions": false,
    "button": false,
    "favorite_models": [],
    "model_parameters": [],
  },
  "relative_line_numbers": "disabled",
  "ssh_connections": [
    {
      "host": "172.16.0.2",
      "username": "hick",
      "args": [],
      "projects": [
        {
          "paths": ["/home/hick"],
        },
        {
          "paths": ["/home/hick/homelab"],
        },
      ],
    },
  ],
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "minimap": {
    "show": "auto",
  },
  "session": {
    "trust_all_worktrees": true,
  },
  "base_keymap": "VSCode",
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)",
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "disable_ai": true, // Desativa as ferramentas de IA
  "show_completions_on_input": true, // Habilita o autocomplete no c√≥digo

  // Fonte features
  "buffer_font_features": {
    "calt": true, // Font ligatures
  },
  "line_indicator_format": "long", // `short`
}
